{
  "name": "scrolltering",
  "version": "1.0.0",
  "description": "Simple Scrolly Triggering System - IntersectionObserverを使用したシンプルなスクロールトリガリングシステム",
  "main": "dist/scrolltering.js",
  "module": "dist/scrolltering.es.js",
  "types": "dist/scrolltering.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c --environment NODE_ENV:production",
    "preview": "npm run build && rollup -c rollup.config.preview.js",
    "dev": "rollup -c --watch --environment NODE_ENV:development,SERVE:true",
    "publish": "gh-pages -d dist",
  },
  "keywords": [
    "scroll",
    "intersection-observer",
    "scrollytelling",
    "javascript",
    "vanilla-js"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.9.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^1.1.1"
  },
  "dependencies": {
    "gh-pages": "^6.3.0"
  }
}
